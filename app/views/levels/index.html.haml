%h1 Listing levels
%table
  %thead
    %tr
      %th
      %th
      %th
  %tbody
    - @levels.each do |level|
      %tr
        %td= level.name
        %td= level.level_url
        %td= link_to 'Show', [@game, level]
        - if can? :update, level
          %td= link_to 'Edit', edit_game_level_path(@game, level)
        - if can? :destroy, level
        %td= link_to 'Destroy', [@game, level], method: :delete, data: { confirm: 'Are you sure?' }
%br/
- if can? :create, Level
  = link_to 'New Level', new_game_level_path
