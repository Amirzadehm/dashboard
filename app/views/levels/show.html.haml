%p#notice= notice

- user_levels = current_user.levels_from_script(Script.first)

%div
  - user_levels.each do |ul|
    - link = [ul.level.game, ul.level]
    - box_class = if !ul.id then 'level_untried'
    - elsif ul.stars == 3 then 'level_aced'
    - elsif ul.stars == 0 then 'level_undone'
    - else 'level_done'
    = link_to " ", link, class: "level_box #{box_class}"
