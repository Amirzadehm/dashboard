\#{link_to 'All games', games_path} >

%p
  %strong Name:
  = @game.name
  - if can? :update, @game
    = link_to '(edit)', edit_game_path(@game)
  %br/
  - if can? :edit, @game
    %strong Base url:
    = @game.base_url

  %h1 Levels
  %table
    %thead
      %tr
        %th{ width:100 } Name
        %th{ width:100 }
        %th{ width:100 }
    %tbody
      - @game.levels.each do |level|
        %tr
          %td= link_to level.name, [@game, level]
          - if can? :update, level
            %td= link_to 'Edit', [@game, level]
          - if can? :destroy, level
            %td= link_to 'Destroy', [@game, level], method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  - if can? :create, Level
    = link_to 'New Level', new_game_level_path(@game)
  %br/


