- @page_title = t('crud.edit_model', model: resource_name.to_s.humanize)

%h2= @page_title
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %div
  .field
    = f.label :name
    %br/
    = f.text_field :name, :autofocus => true
  .field
    = f.label :email
    %br/
    = f.email_field :email
  .field
    = f.label :username
    %br/
    = f.text_field :username
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  - if f.object.encrypted_password.present?
    %div
      = f.label :password
      %i= t('user.new_password_hint')
      %br/
      = f.password_field :password, :autocomplete => "off"
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %div
      = f.label :current_password
      %i= t('user.current_password_hint')
      %br/
      = f.password_field :current_password
  .field
    = f.label :locale
    %br/
    = f.select :locale, options_for_locale_select
  .field
    = f.label :gender
    %br/
    = f.select :gender, [['', ''], [t('gender.male'), 'm'], [t('gender.female'), 'f']]
  %div= f.submit t('crud.update')
%h3= t('user.cancel.title')
%p
  = t('user.cancel.hint')
  = button_to t('user.cancel.button'), registration_path(resource_name), :data => { :confirm => t('crud.confirm') }, :method => :delete
= link_to t('crud.back'), :back
