- if !code_summaries.blank?
  %h4= title
  %table
    %tr
      %th Count
      %th Code
      %th Add Code-Specific Hint
    - code_summaries.each do |result|
      %tr
        %td= result[1]
        %td= render partial: 'shared/solution', locals: { level_source_id: result[0], level: level }
        %td= link_to 'Add Hint', add_hint_path(result[0]) if result.length == 3 && result[2]
