= link_to 'Add student', new_follower_path

%table
  %tr
    %th Name
    %th Email
    %th Levels finished
    %th Last attempt
  - @students.each do |student|
    %tr
      %td= link_to student.name || student.username, script_user_stats_path(Script.first, student)
      %td= student.email
      %td= student.levels_finished
      %td= student.last_attempt ? ago(student.last_attempt) : '(not yet started)'