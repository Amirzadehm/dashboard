%h1 Concepts
%table
  %thead
    %tr
      %th Name
      %th Description
      %th
      %th
  %tbody
    - @concepts.each do |concept|
      %tr
        %td= link_to concept.name, concept
        %td= concept.description
        - if can? :update, concept
          %td= link_to 'Edit', edit_concept_path(concept)
        - if can? :destroy, concept
          %td= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' }
%br/
- if can? :create, Concept
  = link_to 'New Concept', new_concept_path
