<!DOCTYPE html>
%html
  %head
    %title Dashboard
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %table{ width: '100%' }
      %tr.header
        %td{ width: '33%'}
          = link_to(image_tag('logo.png'), root_path, style: "background-color:transparent;")

        %td{ width: '33%', style: 'text-align:center' }
          - if @script && current_user
            - progress = current_user.progress(@script)
            %a{ href: script_user_stats_path(@script, current_user) }
              .progress-outer
                .progress-inner{ style: "width:#{(100 * progress['current']/progress['max']).to_i}%" }
        %td{ width: '33%', style: 'text-align:right'}
          = render 'shared/user_menu'

    - if notice
      %p#notice= notice
    - if alert
      %p#alert= alert

    = yield
